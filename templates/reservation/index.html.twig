{% extends "base.html.twig" %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-calendar-check me-2"></i>
            Mes Réservations
        </h1>
        <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Nouvelle Réservation
        </a>
    </div>

    {% if reservations is empty %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x" style="font-size: 3rem; color: #6c757d;"></i>
                <h3 class="mt-3">Aucune réservation</h3>
                <p class="text-muted">Vous n''avez pas encore de réservation.</p>
                <a href="{{ path('app_reservation_new') }}" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>
                    Faire une réservation
                </a>
            </div>
        </div>
    {% else %}
        <div class="row">
            {% for reservation in reservations %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Réservation #{{ reservation.id }}</h5>
                            <span class="badge bg-success">
                                Confirmée
                            </span>
                        </div>
                        
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-calendar-date text-primary me-2"></i>
                                    <strong>Date:</strong>
                                </div>
                                <p class="mb-0">{{ reservation.dateReservation ? reservation.dateReservation|date('d/m/Y') : 'N/A' }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-clock text-primary me-2"></i>
                                    <strong>Heure:</strong>
                                </div>
                                <p class="mb-0">{{ reservation.heure ? reservation.heure|date('H:i') : 'N/A' }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-people text-primary me-2"></i>
                                    <strong>Personnes:</strong>
                                </div>
                                <p class="mb-0">{{ reservation.nombrePersonnes }} personne(s)</p>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-table text-primary me-2"></i>
                                    <strong>Table:</strong>
                                </div>
                                <p class="mb-0">{{ reservation.tableResto ? reservation.tableResto : 'N/A' }}</p>
                            </div>
                            
                            {% if reservation.commentaire %}
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-chat-left text-primary me-2"></i>
                                    <strong>Commentaire:</strong>
                                </div>
                                <p class="mb-0">{{ reservation.commentaire|slice(0, 50) }}{{ reservation.commentaire|length > 50 ? '...' : '' }}</p>
                            </div>
                            {% endif %}
                        </div>
                        
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                   class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" 
                                   class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {{ include('reservation/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}
