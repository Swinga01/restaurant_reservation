{{ form_start(form) }}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-table"></i>
                    {% if form.vars.value.id %}
                        Modifier la Table #{{ form.vars.value.id }}
                    {% else %}
                        Créer une nouvelle Table
                    {% endif %}
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.numero, 'Numéro de table', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 1, 2, 3...'}}) }}
                            <div class="form-text">Numéro unique de la table</div>
                            {{ form_errors(form.numero) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 2, 4, 6...'}}) }}
                            <div class="form-text">Nombre maximum de personnes</div>
                            {{ form_errors(form.capacite) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_table_resto_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Annuler
                    </a>
                    
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}

<style>
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
</style>
